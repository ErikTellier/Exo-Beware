<!DOCTYPE html>
<html>
<head>
    <title>Materiel List</title>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.0/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.4.0/css/responsive.dataTables.min.css">
<style>
        /* Style for the background overlay */
        #overlay {
            position: fixed;
            display: none;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5); /* Semi-transparent background */
            z-index: 9998;
        }

        /* Style for the modal */
        #materielModal {
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: white;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            z-index: 9999;
            width: 300px;
            border-radius: 8px;
        }

        /* Style for close button */
        #closeModal {
            display: block;
            margin: 20px auto 0;
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        #closeModal:hover {
            background-color: #0056b3;
        }

        /* Style for the New button */
        #newButton {
            position: absolute;
            top: 20px;
            right: 20px;
            padding: 10px 20px;
            background-color: #28a745;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }


    </style>

</head>
<body>
    <h1>Materiel List</h1>
    <button id="newButton" onclick="window.location.href='{{ path('materiel_new') }}'">New</button>
    <table id="materielTable" class="display responsive nowrap" style="width:100%;">
        <thead>
            <tr>
                <th style="display:none;">ID</th> <!-- Colonne cachée pour l'ID -->
                <th>Nom</th>
                <th>Prix TTC</th>
                <th>Quantité</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>

    <div id="overlay"></div>

    <div id="materielModal" style="display:none;">
        <div id="materielDetails"></div>
        <button id="closeModal">Close</button>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.0/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.4.0/js/dataTables.responsive.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function() {
            $('#materielTable').DataTable({
                "processing": true,
                "serverSide": true,
                "ajax": "{{ path('materiel_data') }}",
                "responsive": true,
                "autoWidth": false, 
                "columns": [
                    { "data": "id", "visible": false },
                    { "data": "nom" },
                    { "data": "prixTTC" , "type": "num" },
                    { "data": "quantite" , "type": "num" },
                    {   // Add buttons for each row
                        "data": null,
                        "orderable": false,  // Désactive le tri
                        "searchable": false, // Désactive la recherche
                        "render": function (data, type, row) {
                            return `
                                <button class="view-btn" data-id="${data.id}">Voir</button>
                                <button class="edit-btn" data-id="${data.id}">Modifier</button>
                                <button class="decrement-btn" data-id="${data.id}">-</button>
                                <button class="increment-btn" data-id="${data.id}">+</button>
                            `;
                        }
                    }
                ],
                "searching": false,         // Disable the search box
                "lengthChange": true,      // Disable the "Show X entries" dropdown
                "paging": true,             // Enable pagination
                "info": true               // Disable the "Showing X to Y of Z entries" info
            });
        });


        // Event handler for view button
        $(document).on('click', '.view-btn', function() {
            var materielId = $(this).data('id'); // Récupère l'ID du matériel depuis l'attribut data-id

            // Effectue une requête Ajax pour récupérer les détails de l'élément spécifique
            $.ajax({
                url: `/materiel/${materielId}`, // URL pour récupérer les données de l'élément avec cet ID
                method: 'GET',
                success: function(response) {
                    var rowData = response; // Assure-toi que le serveur retourne les détails d'un seul élément

                    // Créer le contenu à afficher dans la popup
                    var details = `
                        <p>Nom: ${rowData.nom}</p>
                        <p>Prix HT: ${rowData.prixHT}</p>
                        <p>Prix TTC: ${rowData.prixTTC}</p>
                        <p>TVA Libelle: ${rowData.tvaLibelle}</p>
                        <p>TVA Valeur: ${rowData.tvaValeur}</p>
                        <p>Quantité: ${rowData.quantite}</p>
                        <p>Date de création: ${rowData.creationDate}</p>
                        <a href="/materiel/${materielId}/pdf" target="_blank">Télécharger le PDF</a>
                    `;
                    $('#materielDetails').html(details); // Injecter les détails dans la modal
                    $('#overlay').show();
                    $('#materielModal').show();
                },
                error: function() {
                    alert('Erreur lors de la récupération des données du matériel.');
                }
            });
        });

            // Close modal
            $('#closeModal').click(function() {
                $('#overlay').hide();
                $('#materielModal').hide();
            });

            // Event handler for edit button (does nothing for now)
            $(document).on('click', '.edit-btn', function() {
                var materielId = $(this).data('id'); // Récupère l'ID du matériel depuis l'attribut data-id
                window.location.href = `/edit/${materielId}`; // Redirige vers la page d'édition avec l'ID
            });
            // Gestion du bouton de décrémentation
            $(document).on('click', '.decrement-btn', function() {
                var materielId = $(this).data('id');
                $.ajax({
                    url: `/decrement/${materielId}`,
                    method: 'POST',
                    success: function() {
                        // Rafraîchir le tableau après décrémentation
                        $('#materielTable').DataTable().ajax.reload();
                    },
                    error: function() {
                        alert("Erreur lors de la décrémentation du stock.");
                    }
                });
            });

            $(document).on('click', '.increment-btn', function() {
                var materielId = $(this).data('id');
                $.ajax({
                    url: `/increment/${materielId}`,
                    method: 'POST',
                    success: function() {
                        $('#materielTable').DataTable().ajax.reload();
                    },
                    error: function() {
                        alert("Erreur lors de l'incrémentation du stock.");
                    }
                });
            });
    </script>
</body>
</html>