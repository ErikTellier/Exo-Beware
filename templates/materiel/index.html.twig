<!DOCTYPE html>
<html>
<head>
    <title>Materiel List</title>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.0/css/jquery.dataTables.min.css">
</head>
<body>
    <h1>Materiel List</h1>
    <table id="materielTable" class="display">
        <thead>
            <tr>
                <th>Nom</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.0/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function() {
            $('#materielTable').DataTable({
                "processing": true,
                "serverSide": true,
                "ajax": "{{ path('materiel_data') }}",
                "columns": [
                    { "data": "nom" }
                ],
                "searching": false,         // Disable the search box
                "lengthChange": false,      // Disable the "Show X entries" dropdown
                "paging": true,             // Enable pagination
                "info": false               // Disable the "Showing X to Y of Z entries" info
            });
        });
    </script>
</body>
</html>